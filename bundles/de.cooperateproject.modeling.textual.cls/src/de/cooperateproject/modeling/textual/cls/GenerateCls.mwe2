module de.cooperateproject.modeling.textual.cls.GenerateCls

import org.eclipse.xtext.xtext.generator.*
import org.eclipse.xtext.xtext.generator.model.project.*

var rootPath = ".."
var projectName = "Cooperate"
var runtimeProject = "../${projectName}"
var testProject = "${runtimeProject}/../../tests"

Workflow {
	
	component = XtextGenerator {
		configuration = {
			project = StandardProjectConfig {
				baseName = "de.cooperateproject.modeling.textual.cls"
				rootPath = rootPath
				runtimeTest = {
					root = testProject
					enabled = true
				}
				eclipsePlugin = {
					enabled = true
				}
				eclipsePluginTest = {
					root = testProject
					enabled = true
				}
				createEclipseMetaData = true
			}
			code = {
				encoding = "windows-1252"
				fileHeader = "/*\n * generated by Xtext \${version}\n */"
			}
		}
		language = StandardLanguage {
			name = "de.cooperateproject.modeling.textual.cls.Cls"
			fileExtensions = "cls"

			serializer = {
				generateStub = false
			}
			validator = {
				// composedCheck = "org.eclipse.xtext.validation.NamesAreUniqueValidator"
			}
		}
	}
}

<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="de.cooperateproject.ui.editors.launcher.extensions.editorlauncher" name="EditorLauncher" schema="schema/de.cooperateproject.ui.editors.launcher.extensions.editorlauncher.exsd"/>
   <extension-point id="de.cooperateproject.ui.modelcreator.postprocessor" name="Model Creator Post Processor" schema="schema/de.cooperateproject.ui.modelcreator.postprocessor.exsd"/>
   <extension-point id="de.cooperateproject.ui.startup" name="Startup Actions" schema="schema/de.cooperateproject.ui.startup.exsd"/>
   <extension
         id="CooperateProjectNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="de.cooperateproject.ui.nature.CooperateProjectNature">
         </run>
      </runtime>
      <builder
            id="de.cooperateproject.ui.CooperateProjectBuilder">
      </builder>
   </extension>
   <extension
         id="CooperateProjectBuilder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="de.cooperateproject.ui.nature.CooperateProjectBuilder">
         </run>
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="de.cooperateproject.ui.AddProjectNatureCommand"
            name="Convert to Cooperate Project">
      </command>
      <command
            defaultHandler="de.cooperateproject.ui.commands.ReconnectLocalProjectsCommand"
            id="de.cooperateproject.ui.ReconnectLocalProjectsCommand"
            name="Reconnect Local Projects">
      </command>
      <command
            defaultHandler="de.cooperateproject.ui.commands.DeleteProjectFromRepositoryCommand"
            id="de.cooperateproject.ui.DeleteProjectFromRepositoryCommand"
            name="Delete Project from Repositoy">
      </command>
      <command
            defaultHandler="de.cooperateproject.ui.commands.DeleteDiagramFromRepositoryCommand"
            id="de.cooperateproject.ui.DeleteDiagramFromRepositoryCommand"
            name="Delete Diagram from Repositoy">
      </command>
      <command
            id="de.cooperateproject.ui.CommitEditorChanges"
            name="Commit Editor Changes">
      </command>
      <command
            id="de.cooperateproject.ui.ReloadEditorContent"
            name="Reload Editor Content">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cooperateproject.ui.commands.AddProjectNatureCommand"
            commandId="de.cooperateproject.ui.AddProjectNatureCommand">
      </handler>
      <handler
            class="de.cooperateproject.ui.commands.MergeEditorChangesHandler"
            commandId="de.cooperateproject.ui.CommitEditorChanges">
      </handler>
      <handler
            class="de.cooperateproject.ui.commands.ReloadEditorContentHandler"
            commandId="de.cooperateproject.ui.ReloadEditorContent">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.projectConfigure">
         <command
               commandId="de.cooperateproject.ui.AddProjectNatureCommand"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="de.cooperateproject.ui.CooperateProjectNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="de.cooperateproject.ui.properties.ProjectPropertiesPage"
            id="de.cooperateproject.ui.nature.properties"
            name="Cooperate">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="de.cooperateproject.ui.CooperateProjectNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            default="false"
            extensions="cooperate"
            icon="icons/16/cooperate_16.png"
            id="de.cooperateproject.ui.editors.launcher.EditorLauncher"
            launcher="de.cooperateproject.ui.editors.launcher.EditorLauncher"
            name="Cooperate Editor Launcher">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.cooperateproject.ui.startup.impl.StartupExecutor">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="de.cooperateproject.ui.wizards.cooperateWizards"
            name="Cooperate">
      </category>
      <wizard
            category="de.cooperateproject.ui.wizards.cooperateWizards"
            class="de.cooperateproject.ui.wizards.projectnew.NewCooperateProjectWizard"
            finalPerspective="de.cooperateproject.ui.perspective"
            icon="icons/16/cooperate_16.png"
            id="de.cooperateproject.ui.newCooperateProjectWizard"
            name="Cooperate Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="de.cooperateproject.cdo.util.resources">
      <provider
            class="de.cooperateproject.ui.editors.launcher.extensions.TraceModelFileExtensionProvider">
      </provider>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            class="de.cooperateproject.ui.nature.CDOTextDecorator"
            id="de.cooperateproject.ui.decoratorCDO"
            label="CDO Text Decorator"
            lightweight="true"
            state="true">
         <enablement>
            <objectClass
                  name="org.eclipse.core.resources.IProject">
            </objectClass>
         </enablement>
      </decorator>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.cooperateproject.ui.perspective.CooperatePerspective"
            icon="icons/16/cooperate_16.png"
            id="de.cooperateproject.ui.perspective"
            name="Cooperate">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:common.new.menu?after=new">
         <command
               commandId="org.eclipse.ui.newWizard"
               icon="icons/16/cooperate_16.png"
               label="Cooperate Project"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="de.cooperateproject.ui.perspective">
                  </equals>
               </with>
            </visibleWhen>
            <parameter
                  name="newWizardId"
                  value="de.cooperateproject.ui.newCooperateProjectWizard">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="de.cooperateproject.ui.Cooperate">
            <command
                  commandId="de.cooperateproject.ui.ReconnectLocalProjectsCommand"
                  icon="platform:/plugin/org.eclipse.jdt.doc.user/images/org.eclipse.debug.ui/elcl16/memoryreset_tsk.png"
                  label="Reconnect Local Projects"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="de.cooperateproject.ui.perspective">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?endof=org.eclipse.ui.edit.delete">
         <command
               commandId="de.cooperateproject.ui.DeleteProjectFromRepositoryCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/obj16/delete_obj.png"
               label="Delete from Repository"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="de.cooperateproject.ui.perspective">
                     </equals>
                  </with>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <and>
                        <instanceof
                              value="org.eclipse.core.resources.IProject">
                        </instanceof>
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="de.cooperateproject.ui.CooperateProjectNature">
                        </test>
                     </and>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?endof=org.eclipse.ui.edit.delete">
         <command
               commandId="de.cooperateproject.ui.DeleteDiagramFromRepositoryCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/obj16/delete_obj.png"
               label="Delete from Repository"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="de.cooperateproject.ui.perspective">
                     </equals>
                  </with>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <and>
                        <instanceof
                              value="org.eclipse.core.resources.IFile">
                        </instanceof>
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="de.cooperateproject.ui.CooperateProjectNature">
                        </test>
                        <test
                              property="org.eclipse.core.resources.extension"
                              value="cooperate">
                        </test>
                     </and>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:common.import.menu?after=new">
         <command
               commandId="org.eclipse.ui.file.import"
               icon="icons/16/cooperate_16.png"
               label="Cooperate Project"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="de.cooperateproject.ui.perspective">
                  </equals>
               </with>
            </visibleWhen>
            <parameter
                  name="importWizardId"
                  value="de.cooperateproject.ui.importCooperateProjectWizard">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            id="de.cooperateproject.ui.cooperateImportWizards"
            name="Cooperate">
      </category>
      <wizard
            category="de.cooperateproject.ui.cooperateImportWizards"
            class="de.cooperateproject.ui.wizards.projectimport.ImportCooperateProjectWizard"
            icon="icons/16/cooperate_16.png"
            id="de.cooperateproject.ui.importCooperateProjectWizard"
            name="Import Cooperate Project from Repository">
      </wizard>
      <wizard
            category="de.cooperateproject.ui.cooperateImportWizards"
            class="de.cooperateproject.ui.wizards.modelimport.ModelImportWizard"
            icon="icons/16/cooperate_16.png"
            id="de.cooperateproject.ui.importCooperateModelWizard"
            name="Import Cooperate Model into Project">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="de.cooperateproject.ui.cooperate"
            name="Cooperate">
      </category>
   </extension>
   <extension
         point="de.cooperateproject.ui.startup">
      <class
            class="de.cooperateproject.ui.startup.impl.ProjectMonitorInstaller">
      </class>
      <class
            class="de.cooperateproject.ui.startup.impl.ProjectBuilderAction">
      </class>
      <class
            class="de.cooperateproject.ui.editors.launcher.impl.CheckoutListenerRegistration">
      </class>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonFilter
            activeByDefault="true"
            class="de.cooperateproject.ui.perspective.filter.CDOCheckoutFilter"
            description="Omit CDO checkouts"
            id="de.cooperateproject.ui.perspective.filter.cdocheckout"
            name="CDO Checkout Filter"
            visibleInUI="false">
      </commonFilter>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="de.cooperateproject.ui.perspective.filter.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <category
            id="de.cooperateproject.ui.cooperateExportWizards"
            name="Cooperate">
      </category>
      <wizard
            category="de.cooperateproject.ui.cooperateExportWizards"
            class="de.cooperateproject.ui.wizards.model.export.ModelExportWizard"
            icon="icons/16/cooperate_16.png"
            id="de.cooperateproject.ui.wizards.model.export"
            name="Export Model">
      </wizard>
</extension>
</plugin>
